<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/card_width_trailers"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/elevation"
        app:cardUseCompatPadding="true">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/trailer_img_height"
        android:adjustViewBounds="true"
        android:src="@drawable/youtube_icon"
        android:contentDescription="trailer image"
        android:scaleType="centerCrop" />

    </android.support.v7.widget.CardView>
    <TextView
        android:paddingLeft="@dimen/margin_med"
        android:paddingRight="@dimen/margin_med"
        android:paddingTop="-16dp"
        android:layout_gravity="center"
        android:id="@+id/trailer_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
</LinearLayout>